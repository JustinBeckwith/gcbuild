{
  "name": "gcbuild",
  "version": "0.0.0",
  "description": "An API and CLI for building docker containers with Google Cloud Build.",
  "repository": "JustinBeckwith/gcbuild",
  "bin": {
    "gcb": "./build/src/cli.js",
    "gcbuild": "./build/src/cli.js"
  },
  "type": "module",
  "exports": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "files": [
    "build/src",
    "src/.gcloudignore"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "c8 mocha build/test",
    "compile": "tsc -p .",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "watch": "tsc -p . --watch",
    "fix": "biome check --write .",
    "lint": "biome check ."
  },
  "keywords": [
    "google",
    "cloud",
    "build",
    "docker"
  ],
  "author": "Justin Beckwith <justin.beckwith@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.0",
    "globby": "^14.0.0",
    "googleapis": "^144.0.0",
    "js-yaml": "^4.1.0",
    "meow": "^13.0.0",
    "ora": "^8.0.0",
    "tar": "^6.1.11",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/js-yaml": "^4.0.4",
    "@types/mocha": "^10.0.0",
    "@types/node": "^22.0.0",
    "@types/sinon": "^17.0.0",
    "@types/tar": "^6.1.0",
    "@types/update-notifier": "^6.0.1",
    "c8": "^10.0.0",
    "gaxios": "^6.0.0",
    "mocha": "^11.0.0",
    "nock": "^13.2.1",
    "semantic-release": "^24.0.0",
    "sinon": "^19.0.0",
    "typescript": "~5.7.0"
  },
  "c8": {
    "exclude": [
      "build/test"
    ]
  }
}
