{
  "name": "gcbuild",
  "version": "2.1.1",
  "description": "An API and CLI for building docker containers with Google Cloud Build.",
  "repository": "JustinBeckwith/gcbuild",
  "bin": {
    "gcb": "./build/src/cli.js",
    "gcbuild": "./build/src/cli.js"
  },
  "type": "module",
  "exports": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "files": [
    "build/src",
    "src/.gcloudignore"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "compile": "tsc -p .",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "watch": "tsc -p . --watch",
    "fix": "biome check --write .",
    "lint": "biome check ."
  },
  "keywords": [
    "google",
    "cloud",
    "build",
    "docker"
  ],
  "author": "Justin Beckwith <justin.beckwith@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/cloudbuild": "^5.3.1",
    "@google-cloud/storage": "^7.17.2",
    "chalk": "^5.0.0",
    "globby": "^16.0.0",
    "google-auth-library": "^10.4.2",
    "js-yaml": "^4.1.0",
    "meow": "^14.0.0",
    "ora": "^9.0.0",
    "tar": "^7.5.1",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/js-yaml": "^4.0.4",
    "@types/node": "^24.0.0",
    "@types/tar": "^7.0.0",
    "@types/update-notifier": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.4",
    "gaxios": "^7.0.0",
    "nock": "^14.0.0",
    "typescript": "~5.9.0",
    "vitest": "^4.0.4"
  }
}
